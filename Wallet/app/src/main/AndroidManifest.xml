<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qrusial.wallet">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/tesas"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.Authentication" />
        <activity
            android:name=".view.menu.AddRecord"
            android:label="Make Record"
            android:parentActivityName=".view.activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.activity.MainActivity" />
        </activity>
        <activity
            android:name=".view.menu.Dashboard"
            android:label="Dashboard"
            android:parentActivityName=".view.activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.activity.MainActivity" />
        </activity>
        <activity
            android:name=".view.menu.Chart"
            android:label="Chart"
            android:parentActivityName=".view.activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.activity.MainActivity" />
        </activity>
        <activity
            android:name=".view.menu.Tab1Income"
            android:label="Income"
            android:parentActivityName=".view.menu.AddRecord">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.menu.AddRecord" />
        </activity>
        <activity
            android:name=".view.menu.Tab2Expense"
            android:label="Expense"
            android:parentActivityName=".view.menu.AddRecord">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.menu.AddRecord" />
        </activity>
        <activity android:name=".view.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.menu.Record"
            android:label="Record"
            android:parentActivityName=".view.activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.activity.MainActivity" />

        </activity>
    </application>

</manifest>