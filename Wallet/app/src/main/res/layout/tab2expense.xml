<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.menu.AddRecord$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="265dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="90dp"
                    android:layout_height="61dp"
                    android:text="7"
                    android:textSize="30sp"
                    android:background="@android:color/background_light" />

                <Button
                    android:layout_width="90dp"
                    android:layout_height="61dp"
                    android:text="8"
                    android:textSize="30sp"
                    android:background="@android:color/background_light" />

                <Button
                    android:layout_width="90dp"
                    android:layout_height="61dp"
                    android:text="9"
                    android:textSize="30sp"
                    android:background="@android:color/background_light" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="90dp"
                    android:layout_height="61dp"
                    android:text="4"
                    android:textSize="30sp"
                    android:background="@android:color/background_light" />

                <Button
                    android:layout_width="90dp"
                    android:layout_height="61dp"
                    android:text="5"
                    android:textSize="30sp"
                    android:background="@android:color/background_light" />

                <Button
                    android:layout_width="90dp"
                    android:layout_height="61dp"
                    android:text="6"
                    android:textSize="30sp"
                    android:background="@android:color/background_light" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="90dp"
                    android:layout_height="61dp"
                    android:text="1"
                    android:textSize="30sp"
                    android:background="@android:color/background_light" />

                <Button
                    android:layout_width="90dp"
                    android:layout_height="61dp"
                    android:text="2"
                    android:textSize="30sp"
                    android:background="@android:color/background_light" />

                <Button
                    android:layout_width="90dp"
                    android:layout_height="61dp"
                    android:text="3"
                    android:textSize="30sp"
                    android:background="@android:color/background_light" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="90dp"
                    android:layout_height="61dp"
                    android:text="."
                    android:textSize="30sp"
                    android:background="@android:color/background_light"
                    android:id="@+id/button" />

                <Button
                    android:layout_width="90dp"
                    android:layout_height="61dp"
                    android:text="0"
                    android:textSize="30sp"
                    android:background="@android:color/background_light"
                    android:id="@+id/button5" />

                <Button
                    android:layout_width="90dp"
                    android:layout_height="61dp"
                    android:text="del"
                    android:textSize="15sp"
                    android:background="@android:color/background_light"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="90dp"
                android:layout_height="49dp"
                android:text="*"
                android:textSize="35sp"
                android:background="@android:color/background_light" />

            <Button
                android:layout_width="90dp"
                android:layout_height="49dp"
                android:text="/"
                android:textSize="35sp"
                android:background="@android:color/background_light" />

            <Button
                android:layout_width="90dp"
                android:layout_height="49dp"
                android:text="+"
                android:textSize="35sp"
                android:background="@android:color/background_light" />

            <Button
                android:layout_width="90dp"
                android:layout_height="49dp"
                android:text="-"
                android:textSize="35sp"
                android:background="@android:color/background_light" />

            <Button
                android:layout_width="90dp"
                android:layout_height="49dp"
                android:text="="
                android:textSize="35sp"
                android:background="@android:color/background_light" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
